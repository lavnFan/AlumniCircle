<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_12_margin"
    android:paddingTop="@dimen/activity_12_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_me_show_left_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/activity_16_margin"
            android:text="阿里巴巴"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/item_me_show_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_16_margin"
            android:layout_toLeftOf="@+id/item_me_show_arrow"
            android:text="2016.1-至今" />

        <ImageView
            android:id="@+id/item_me_show_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_16_margin"
            android:src="@drawable/arrow" />
    </RelativeLayout>
</LinearLayout>
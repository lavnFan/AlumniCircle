<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_20_margin"
        android:layout_marginLeft="@dimen/activity_8_margin"
        android:layout_marginRight="@dimen/activity_8_margin"
        android:layout_marginTop="@dimen/activity_20_margin">

        <ImageView
            android:id="@+id/circle_top_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/circle_top_iv"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/activity_8_margin"
            android:layout_marginLeft="@dimen/activity_8_margin"
            android:layout_marginTop="@dimen/activity_6_margin"
            android:layout_toRightOf="@+id/circle_top_iv"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/activity_2_margin"
                    android:layout_marginTop="@dimen/activity_2_margin"
                    android:layout_toLeftOf="@+id/circle_top_topic_tv"
                    android:text="#快到年底了赶紧想想2015年还有什么事情没有去做#"
                    android:textColor="@color/text_main" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12月01日"
                        android:textColor="@color/text_help" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_12_margin"
                        android:text="1180人参加"
                        android:textColor="@color/text_help" />
                </LinearLayout>

                <TextView
                    android:id="@+id/circle_top_topic_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/topic_line"
                    android:gravity="center"
                    android:text="@string/topic"
                    android:textColor="@color/main_color" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
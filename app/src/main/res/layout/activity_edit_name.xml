<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_8_margin"
        android:layout_marginRight="@dimen/activity_8_margin"
        android:layout_marginTop="@dimen/activity_12_margin"
        android:background="@drawable/text_radius_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="start"
            android:paddingBottom="@dimen/activity_8_margin"
            android:paddingLeft="@dimen/activity_16_margin"
            android:paddingRight="@dimen/activity_16_margin"
            android:paddingTop="@dimen/activity_8_margin"
            android:textColorHint="@color/text_hint" />
    </LinearLayout>

</LinearLayout>
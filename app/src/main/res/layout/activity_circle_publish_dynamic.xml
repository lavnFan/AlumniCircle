<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_8_margin"
                android:layout_marginRight="@dimen/activity_8_margin"
                android:layout_marginTop="@dimen/activity_12_margin"
                android:background="@null"
                android:gravity="start"
                android:text="宝宝今天心情不美丽哇"
                android:textColor="@color/text_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/near_white"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_8_margin"
            android:paddingTop="@dimen/activity_8_margin">

            <ImageView
                android:layout_marginRight="@dimen/activity_64_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_photo" />

            <ImageView
                android:layout_marginRight="@dimen/activity_64_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_face" />

            <ImageView
                android:layout_marginRight="@dimen/activity_64_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_2" />

            <ImageView
                android:layout_marginRight="@dimen/activity_20_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_3" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
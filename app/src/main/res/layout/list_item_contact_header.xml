<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/contacts_new_friends_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/list_item_bg"
            android:clickable="true">

            <ImageView
                android:id="@+id/contacts_new_friends_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/new_friends" />

            <TextView
                android:id="@+id/contacts_new_friends_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/contacts_new_friends_iv"
                android:text="@string/new_friend"
                android:textColor="#353535"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#d9d9d9" />

        <RelativeLayout
            android:id="@+id/contacts_alumni_good_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/list_item_bg"
            android:clickable="true">

            <ImageView
                android:id="@+id/contacts_alumni_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/circle_person_big" />

            <TextView
                android:id="@+id/contacts_alumni_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/contacts_alumni_iv"
                android:text="@string/alumni_good"
                android:textColor="#353535"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>